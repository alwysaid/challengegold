                                <input type="text" name="subLinkCampaign" class="form-control" id="subLinkCampaign"
                                    placeholder="bd/bantublablabla">
                            </div>
                            <div class="col-md-6 col-sm-12 mt-2">
                                <label for="gambarCampaignHeader" class="form-label">Banner Campaign</label>
